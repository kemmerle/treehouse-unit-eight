extends layout.pug

block content
  h1 Create a New Book Entry
  br
  if errorMessages
    h2.error Please see the error messages below:
      ul
      each message in errorMessages
        li= message.message
  br
  form(method='POST', action='/books/new')
    label(for='title') Title
    input#title(type='text', name='title')
    br
    label(for='author') Author
    input#author(type='text', name='author')
    br
    label(for='genre') Genre
    input#genre(type='text', name='genre')
    br
    label(for='year') Year
    input#year(type='text', name='year')
    br
    br
    input(type='submit', value='Submit')
